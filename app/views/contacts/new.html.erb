<div class="row">
	<div class="col-md-4 col-md-offset-4" >
		<h2 class=>Welcome to Cube Deck</h2>
			<p class=>Please fill out the contact information below.</p>
				<div class="well well-lg">
					<%= form_for @contact do |f| %>
							<div class="form-group">
								<%= f.label :name %>
								<%= f.text_field :name, placeholder: "Your first and last name",class: 'form-control'%>
								
							</div>
							
							<div class="form-group">
								<%= f.label :email %>
								<%= f.email_field :email, placeholder: "Your email address", class: 'form-control'%>
					    </div>
					    
					    <div class="form-group">
								<%= f.label :message %>
								<%= f.text_area :message, class: 'form-control' %>
							</div>
							<%= f.submit 'Submit', class: 'btn btn-primary' %>
						<% end %>
				</div>
			</div>
		</div>